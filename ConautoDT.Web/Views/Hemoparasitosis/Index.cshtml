    <script>

        function seleccionarArchivo() {
            // Crear un input de tipo file
            const inputArchivo = document.createElement('input');
            inputArchivo.type = 'file';
            inputArchivo.accept = '.pdf';
            inputArchivo.style.display = 'none';

            // Adjuntar el input al documento
            document.body.appendChild(inputArchivo);

            // Asignar la función de manejo de cambios al input
            inputArchivo.addEventListener('change', function () {
                const archivo = inputArchivo.files[0];

                if (archivo) {
                    if (archivo.type === 'application/pdf') {
                        // Archivo PDF seleccionado correctamente
                        setTimeout(function () {
                            Swal.fire('Éxito', 'EXAMENES CARGADOS CORRECTAMENTE', 'success');
                        }, 4000); // Retraso de 4 segundos
                    } else {
                        // Archivo seleccionado no es un PDF
                        setTimeout(function () {
                            Swal.fire('Error', 'Por favor, seleccione un archivo PDF.', 'error');
                        }, 3000); // Retraso de 4 segundos
                    }
                } else {
                    // No se seleccionó ningún archivo
                    setTimeout(function () {
                        Swal.fire('Error', 'Por favor, seleccione un archivo.', 'error');
                    }, 3000); // Retraso de 4 segundos
                }

                // Eliminar el input después de la validación
                document.body.removeChild(inputArchivo);
            });

            // Hacer clic en el input
            inputArchivo.click();
        }

