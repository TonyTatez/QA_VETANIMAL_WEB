        function FichaMascota(Mascota) {


            console.log("editar", Mascota);
            $('#editNombre2').val(Mascota.nombreMascotas);
            $('#editdueño22').val(Mascota.nombres);
            $('#editPeso2').val(Mascota.peso);
            $('#editRaza2').val(Mascota.raza);
            $('#editSexo2').val(Mascota.sexo);
            $('#idmasc2').val(Mascota.idMascota);

            // Dividir la cadena de fecha
            const partesFecha = Mascota.fecha.split(' ');
            const fechaSinHora = partesFecha[0]; // Obtener la parte de la fecha

            // Formatear la fecha para mostrar solo la parte de la fecha (sin la hora)
            const partesFechaNumeros = fechaSinHora.split('/');
            const fecha = new Date(partesFechaNumeros[2], partesFechaNumeros[1] - 1, partesFechaNumeros[0]);

            const fechaFormateada = fecha.toLocaleDateString(); // Puedes ajustar el formato según tus necesidades

            $('#editFecha2').val(fechaFormateada);
        }

        function enviarDatos() {

            // Obtener los valores de los checkboxes seleccionados
            var idMascota = $("#idmasc2").val();
            var nombremascota = $("#editNombre2").val();

            var sintomasSeleccionados = $("input[name='sintomas']:checked").map(function () {
                return $(this).val();
            }).get();

            // Imprimir en consola los síntomas seleccionados
            console.log("Síntomas seleccionados:", sintomasSeleccionados);


            document.getElementById("cargasid").hidden = false;

            setTimeout(function () {
                // Realizar la solicitud AJAX
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("PredecirEnfermedad", "Hemoparasitosis")", // Reemplaza con la ruta correcta del controlador
                    data: {
                        idMascota: idMascota,
                        nombremascota: nombremascota,
                        sintomas: sintomasSeleccionados
                    },
                    success: function (response) {
                        document.getElementById("cargasid").hidden = true;
                        
                        // Limpiar la tabla antes de agregar nuevos datos
                        $('#tablaDiagnostico tbody').empty();

                        // Verificar si hay una propiedad "enfermedad" en la respuesta
                        if (response.enfermedad) {


                            var estiloBoton = response.enfermedad === "Enfermedad Desconocida" ? "btn-danger" : "btn-success";
                            var icono = response.enfermedad === "Enfermedad Desconocida" ? "bi-x" : "bi-check";
                            // Crear una fila con la información de la respuesta
                            var observacion = response.enfermedad === "Enfermedad Desconocida" ? "NEGATIVO" : "POSITIVO";
                            // Crear una fila con la información de la respuesta
                            var fila = '<tr>' +
                                '<td>' + response.nombreMascota + '</td>' +  // Reemplaza esto con el nombre real de la mascota
                                '<td>' + response.enfermedad + '</td>' +
                                '<td>' + observacion + '</td>' +  // Puedes ajustar esto según tus necesidades
                                '<td>' +
                                '<button type="button" class="btn ' + estiloBoton + ' btn-sm">' +
                                '<i class="bi ' + icono + '"></i>' +
                                '</button>' +
                                '</td>' +
                                '</tr>';

                            $('#tablaDiagnostico tbody').append(fila);
                        }

                        // Manejar la respuesta del servidor si es necesario
                        console.log(response);
                    },
                    error: function (error) {
                        document.getElementById("cargasid").hidden = true;
                        // Manejar errores
                        console.error("Error en la solicitud AJAX: ", error);
                    }
                });
            }, 5000); // 10 segundos en milisegundos
        }

        function buscarCliente2() {
            console.log("Iniciando función buscarCliente2");

            // Obtener el valor del input de cédula
            var identificacion = $("#CI").val();

            console.log("Cédula del cliente:", identificacion);

            // Hacer la solicitud al endpoint de tu API para consultar el cliente
            $.ajax({
                url: '/HistoriaClinica/BuscarClientePorCI',
                method: 'GET',
                data: { CI: identificacion },
                contentType: 'application/json',
                success: function (data) {
                    console.log("Datos del cliente:", data);

                    // Verifica si se está ejecutando y muestra los datos en la consola


                    // Asegúrate de que los identificadores coincidan con los elementos HTML reales
                    $("#nombreCliente").val(data.nombres);
                    $("#dirCliente").val(data.direccion);
                    $("#correoCliente").val(data.correo);
                    $("#telefono").val(data.telefono);
                    $("#cedCliente").val(data.nombres);
                    $("#editdueño22").val(data.nombres);// Cambiado a data.cedula si es el nombre del cliente

                },
                error: function (error) {
                    // Imprime el mensaje de error en la consola para facilitar la depuración
                    console.error('Error en la solicitud AJAX:', error);
                }
            });

            console.log("Finalizando función buscarCliente2");

            var identificacion = $("#CI").val();
            $.ajax({
                url: '/HistoriaClinica/BuscarMascotaPorCI',
                method: 'GET',
                data: { CI: identificacion },
                contentType: 'application/json',
                success: function (data) {

                    var dropdown = $("#petDropdown");
                    dropdown.empty(); // Clear existing options
                    // Agrega la opción por defecto "Seleccione"
                    dropdown.append($('<option></option>').val('').html('Seleccione'));


                    // Populate the dropdown with pet names
                    data.forEach(function (pet) {
                        dropdown.append($('<option></option>').val(pet.idMascota).html(pet.nombreMascota));
                    });
                    // Verifica si se está ejecutando y muestra los datos en la consola
                    console.log("Datos MASCOTAAAA:", data);
                    $("#petDropdown").change(function () {
                        var selectedPetId = $(this).val();

                        // Find the selected pet in the data array
                        var selectedPet = data.find(function (pet) {
                            return pet.idMascota == selectedPetId;
                        });
                        var longId = parseInt(selectedPet.idMascota); // Assuming it's an integer
                        // Fill the form with the selected pet's details
                        $("#editNombre2").val(selectedPet.nombreMascota);
                        $("#editPeso2").val(selectedPet.peso);
                        $("#editRaza2").val(selectedPet.raza);
                        $("#editSexo2").val(selectedPet.sexo);
                        $("#idmasc2").val(longId);
                        // Verificar si la fecha de nacimiento es válida
                        if (selectedPet.fechaNacimiento) {
                            const fechaNacimiento = new Date(selectedPet.fechaNacimiento);

                            // Verificar si la fecha es válida
                            if (!isNaN(fechaNacimiento.getTime())) {
                                // Formatear la fecha a 'YYYY-MM-DD' para asignarla al input
                                const fechaFormateada = fechaNacimiento.toISOString().split('T')[0];
                                $("#editFecha2").val(fechaFormateada);
