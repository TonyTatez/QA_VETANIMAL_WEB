    <div class="modal-dialog">
        <div class="modal-content " style="width:100%">
            <div class="modal-header ">
                <h5 class="modal-title ">Veterinarios</h5>
                <div class="d-flex align-items-end flex-column">
                    <button type="button" style="color: black" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
            </div>
            <form asp-action="GuardaryEditarInfo">

                <div class="modal-body " style="font-family: 'Young Serif', sans-serif; font-weight: bold;">

                    <div class="form-outline mb-4" hidden>
                        <label class="" for="raza">Id</label>
                        <input type="text" asp-for="@Model.id" class="form-control form-control-lg  " id="idVet2" placeholder="">

                    </div>
                    <div class="form-outline mb-4">
                        <label class="" for="raza">Nombres *</label>
                        <input type="text" asp-for="@Model.nombres" class="form-control form-control-lg  " id="nameVet2" placeholder="Ingrese el nombre" required>

                    </div>
                    <div class="form-outline mb-4">
                        <label class=" " for="raza">Telefono</label>
                        <input type="text" asp-for="@Model.telefono" class="form-control form-control-lg  " onkeypress="return solo10Numeros(event)" id="celVet2" placeholder="Ingrese el telefono">

                    </div>
                    <div class="form-outline mb-4">
                        <label class=" " for="raza">Correo</label>
                        <input type="text" asp-for="@Model.correo" class="form-control form-control-lg  " id="correoVet2" placeholder="Ingrese el correo">

