@model VET_ANIMAL.WEB.Models.VeterinariosViewModel
@{
    ViewData["Title"] = "Veterinarios";
}



<!-- Modal Guardar-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content " style="width:100%">
            <div class="modal-header ">
                <h5 class="modal-title " style="font-family: 'Young Serif', sans-serif; font-weight: bold;">Razas</h5>
                <div class="d-flex align-items-end flex-column">
                    <button type="button" style="color: black" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
            </div>
            <form asp-action="GuardaryEditarInfo">

                <div class="modal-body " style="font-family: 'Young Serif', sans-serif; font-weight: bold;">
                   
                    <div class="form-outline mb-4">
                        <label class="" for="raza">Nombres *</label>
                        <input type="text" asp-for="@Model.nombres" class="form-control form-control-lg  " id="nameVet" placeholder="Ingrese el nombre">

                    </div>
                    <div class="form-outline mb-4">
                        <label class=" " for="raza">Telefono</label>
                        <input type="text" asp-for="@Model.telefono" class="form-control form-control-lg  " id="celVet" onkeypress="return solo10Numeros(event)"  placeholder="Ingrese el telefono" oninput="soloNumeros(event)>

                    </div>
                    <div class="form-outline mb-4">
                        <label class=" " for="raza">Correo</label>
                        <input type="text" asp-for="@Model.correo" class="form-control form-control-lg  " id="correoVet" placeholder="Ingrese el correo">

                    </div>
                    <div class="form-outline mb-4">
                        <label class=" " for="raza">Identificación *</label>
                        <input type="text" asp-for="@Model.identificacion" class="form-control form-control-lg  " id="identificacionVet" placeholder="Ingrese la identificación" onkeypress="return solo10Numeros(event)" required>

                    </div>
                    <div class="form-outline mb-4">
                        <label class=" " for="raza">Rol *</label>
                        <select asp-for="@Model.rol" class="form-control" id="rolVet">
                            <option value="">Seleccione</option>
                            <option value="Admin">Administrador</option>
                            <option value="Planta">Planta</option>
                            <option value="Tester">Tester</option>
                        </select>
                    </div>
                   
                </div>
                <div class="modal-footer">
                    <button id="guardarInformacion" type="submit" class="btn btn-success bi bi-save btn-grad btn-sm"> Guardar </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Editar -->
