                    <div class="form-outline mb-4">
                        <label class=" " for="raza">Identificación *</label>
                        <input type="text" asp-for="@Model.identificacion" class="form-control form-control-lg  " onkeypress="return solo10Numeros(event)" id="identificacionVet2" placeholder="Ingrese la identificación" required>

                    </div>
                    <div class="form-outline mb-4">
                        <label class=" " for="raza">Rol *</label>
                        <select asp-for="@Model.rol" class="form-control" id="rolVet2" required>
                            <option value="">Seleccione</option>
                            <option value="Admin">Administrador</option>
                            <option value="Planta">Planta</option>
                            <option value="Tester">Tester</option>
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button id="guardarInfo2" type="submit" class="bi bi-pen btn btn-primary  btn-sm"> Editar </button>
